metadata {
  name = "kubeflow"
}

scaffold "terraform" {
  path = "terraform"
  type = "terraform"
}

scaffold "crds" {
  path = "crds"
  type = "crd"
}

scaffold "helm" {
  path = "helm/kubeflow"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha     = "3ac4fd3c6e86393069f5185ca84532f779e0d2e63e44dc1e488b54e384a7dc6a"
    retries = 0
  }
}
