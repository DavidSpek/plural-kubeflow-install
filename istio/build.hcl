      "repo",
      "add",
      "istio",
      "cm://app.plural.sh/cm/istio",
    ]

    sha = "36c5787aaea193905e5e0174997f5921deb6367e425014b8202df26d53591bad"
  }

  preflight "update-deps" {
    wkdir   = ""
    target  = "requirements.yaml"
