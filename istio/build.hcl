      "add",
      "istio",
      "cm://app.plural.sh/cm/istio",
    ]

    sha = "6ead92e4c72a31f585ad0708a9268018e56d3e8fa89c6f2c07da040b720bdab7"
  }

  preflight "update-deps" {
    wkdir   = ""
    target  = "requirements.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha = "6ead92e4c72a31f585ad0708a9268018e56d3e8fa89c6f2c07da040b720bdab7"
  }
}
