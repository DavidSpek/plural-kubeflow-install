    command = "helm"

    args = [
      "repo",
      "add",
      "istio",
      "cm://app.plural.sh/cm/istio",
    ]

    sha = "c3ec0b7d229a66e5b858a522d88cd41527463f67b38baa33c08a78434aa2dd73"
  }

  preflight "update-deps" {
    wkdir   = ""
    target  = "requirements.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha = "c3ec0b7d229a66e5b858a522d88cd41527463f67b38baa33c08a78434aa2dd73"
  }
}
