  path = "helm/mlflow"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha     = "b2ecd524bab8c0469e4ded9d4f61ee371f5029f3ac137b6acbe53a8b24c122d4"
    retries = 0
  }
}
