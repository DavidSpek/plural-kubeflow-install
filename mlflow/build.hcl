}

scaffold "helm" {
  path = "helm/mlflow"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "plural"

    args = [
      "wkspace",
      "helm-deps",
    ]

    sha     = "4f8139b73d41ae556e9abd4bd4c7f12a50ecb6df9021eb84f6237b84992d0832"
    retries = 0
    verbose = false
  }
}
