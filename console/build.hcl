}

scaffold "helm" {
  path = "helm/console"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "plural"

    args = [
      "wkspace",
      "helm-deps",
    ]

    sha     = "c20956f6b66748273ed920c17d19052b8307f5d5ef0905e3523ee18c2bb3e1d2"
    retries = 0
    verbose = false
  }
}
