  path = "helm/console"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha     = "734db36703b1a5f6d0e2b03171cf78d52ca7f4528c9e3786c1f351d10f06d48f"
    retries = 0
  }
}
