}

scaffold "helm" {
  path = "helm/bootstrap"
  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "helm"

    args = [
      "dependency",
      "update",
    ]

    sha     = "4af16d336c5a1c7a297ba72533898179512bb7ab22136775ae8b7320d0d7e2e7"
    retries = 0
  }
}
