  type = "helm"

  preflight "update-deps" {
    wkdir   = ""
    target  = "Chart.yaml"
    command = "plural"

    args = [
      "wkspace",
      "helm-deps",
    ]

    sha     = "300baff365ceb50b75c522f1bafada4a98e10c06ecb8daf97a9211ca0548a605"
    retries = 0
    verbose = false
  }
}
